{
  "display_information": {
    "name": "Incident Comms",
    "description": "AI-powered incident communication assistant",
    "background_color": "#1e293b"
  },
  "features": {
    "bot_user": {
      "display_name": "Incident Comms",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/incident",
        "description": "Create or update an incident. Usage: /incident create | /incident update",
        "usage_hint": "create | update",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "commands",
        "users:read",
        "im:write"
      ]
    }
  },
  "settings": {
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
